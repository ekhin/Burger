<div class="row">
  <center>

    <div class="col-md-6">
      <h4 class="titles">Menu items to devour!</h4>
      <div id="ready_to_eat">

        {{#each burgers}}
          {{#unless devoured}}
          <form action="burgers/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <center>
                    <button id="submit-button" type="submit" class="btn btn-danger">Devour it!</button>
                  </center>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>


    <div class="col-md-6">
      <h4 class="titles">Devoured items!</h4>
      <div id="already_eaten">

        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <li class="form-control" id="eaten">{{this.id}}. {{this.burger_name}}</li>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>